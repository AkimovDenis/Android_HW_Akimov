<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#ECEFF1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Изначальная страница"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#007777"
            android:layout_gravity="center"
            android:padding="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите текст"
            android:textSize="21sp"
            android:padding="10dp"
            android:background="#FFFFFF"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Нажать на кнопку"
            android:textSize="18sp"
            android:background="#AA22FF"
            android:textColor="#FFFFFF"
            android:padding="10dp"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Переключатель"
            android:padding="20dp"
            android:textSize="16sp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Галочка для нажатия"
            android:textSize="16sp"
            android:textColor="#FF9800"/>

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="Включено"
            android:textOff="Выключено"
            android:textSize="16sp"
            android:background="#607D11"
            android:textColor="#FFFFFF"
            android:padding="15dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>